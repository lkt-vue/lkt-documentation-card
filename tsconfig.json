{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "preserve",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true
  }
}